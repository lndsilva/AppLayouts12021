<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutRelativo_Activity">

    <ImageView
        android:id="@+id/imgPreto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@color/black" />

    <ImageView
        android:id="@+id/imgRosa"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@+id/imgPreto"
        android:src="#FF5722" />

    <ImageView
        android:id="@+id/imgLaranja"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imgPreto"
        android:src="#FFC107" />

    <ImageView
        android:id="@+id/imgRoxo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imgRosa"
        android:layout_toRightOf="@+id/imgLaranja"
        android:src="#673AB7" />

</RelativeLayout>